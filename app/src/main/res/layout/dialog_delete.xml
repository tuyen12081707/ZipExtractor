<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:orientation="vertical"
        android:tag="layout/dialog_delete_0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginHorizontal="@dimen/_10sdp"
            app:cardCornerRadius="@dimen/_5sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="vertical"
                    android:id="@+id/ll_line"
                    android:background="@color/Red"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_6sdp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:paddingHorizontal="@dimen/_10sdp">

                    <TextView
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:text="Are you Sure?"
                        android:fontFamily="@font/myriadpro_bold" />

                    <TextView
                        android:textSize="15sp"
                        android:textColor="#192221"
                        android:gravity="center"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/msg_del"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:text="Do you really want to delete these records?"
                        android:fontFamily="@font/myriadpro_regular" />
                </LinearLayout>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/linearLayoutCompat"
                    android:background="#f0f0f0"
                    android:padding="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/edRenameFileName">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:gravity="right"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnDelCancel"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_36sdp"
                            android:foreground="?attr/selectableItemBackground"
                            android:backgroundTint="@color/cancel_btn_color"
                            app:cardCornerRadius="@dimen/_18sdp"
                            app:cardElevation="0dp"
                            app:cornerRadius="@dimen/_15sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/btnSaveLocaion">

                            <TextView
                                android:textSize="@dimen/_13sdp"
                                android:textColor="@color/black"
                                android:layout_gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cancel"
                                android:textAllCaps="true"
                                android:fontFamily="@font/myriadpro_regular" />
                        </androidx.cardview.widget.CardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:gravity="left"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_weight="1">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnDelete"
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_36sdp"
                            android:foreground="?attr/selectableItemBackground"
                            app:cardBackgroundColor="@color/Red"
                            app:cardCornerRadius="@dimen/_18sdp"
                            app:cardElevation="0dp"
                            app:cornerRadius="@dimen/_15sdp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintStart_toEndOf="@+id/btnSaveLocaion">

                            <TextView
                                android:textSize="@dimen/_13sdp"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:id="@+id/txtAction"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Delete"
                                android:textAllCaps="true"
                                android:fontFamily="@font/myriadpro_regular" />
                        </androidx.cardview.widget.CardView>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_round"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="@color/Red"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_gravity="center"
                android:padding="@dimen/_4sdp"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_delete"
                app:tint="@color/white" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</layout>
