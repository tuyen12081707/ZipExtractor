<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:orientation="vertical"
        android:tag="layout/dialog_permissions_0"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_15sdp"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="0dp">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/_10sdp">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:gravity="center"
                            android:id="@+id/txtTitle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:text="@string/use_permission"
                            android:fontFamily="@font/myriadpro_bold" />

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/imgPermission"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginHorizontal="@dimen/_10sdp" />

                        <TextView
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/fab_color"
                            android:gravity="center"
                            android:id="@+id/txtPermissionMsg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginBottom="@dimen/_2sdp"
                            android:text="@string/use_permission_msg"
                            android:fontFamily="@font/myriadpro_bold"
                            android:layout_marginHorizontal="@dimen/_10sdp" />

                        <LinearLayout
                            android:orientation="horizontal"
                            android:background="@color/fab_color"
                            android:padding="@dimen/_10sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp">

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardCancel"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_weight="1"
                                android:layout_marginEnd="@dimen/_10sdp"
                                app:cardCornerRadius="@dimen/_6sdp"
                                app:cardElevation="0dp">

                                <TextView
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/fab_color"
                                    android:gravity="center"
                                    android:id="@+id/txtCancel"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Cancel"
                                    android:fontFamily="@font/myriadpro_bold" />
                            </androidx.cardview.widget.CardView>

                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardSave"
                                android:layout_width="@dimen/_100sdp"
                                android:layout_height="@dimen/_35sdp"
                                android:foreground="?attr/selectableItemBackground"
                                android:layout_weight="1"
                                android:layout_marginStart="@dimen/_10sdp"
                                app:cardBackgroundColor="@color/storage_text_color"
                                app:cardCornerRadius="@dimen/_6sdp"
                                app:cardElevation="0dp">

                                <TextView
                                    android:textSize="@dimen/_14sdp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:id="@+id/txtSave"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="Grant"
                                    android:fontFamily="@font/myriadpro_bold" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>
