<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/background</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="fontFamily">@font/inter</item>
        <item name="android:windowLightStatusBar">true</item>

        <item name="background_color">#F9F9F9</item>
        <item name="text_color">#000000</item>
        <item name="second_text_color">#4F4F4F</item>
        <item name="header_color">@color/white</item>
        <item name="background_language_item">@color/white</item>
        <item name="stroke_setting_item">#DEECF3</item>
        <item name="bottom_navigation_select">#242525</item>
        <item name="bottom_navigation_unselect">#AEAEAF</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">#80A6A3A3</item>
    </style>

    <style name="TitleText" parent="AppTheme">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="TabLayoutText" parent="AppTheme">
        <item name="android:textColor">@color/text_grey</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MediumText" parent="AppTheme">
        <item name="android:textColor">@color/text_title</item>
    </style>

    <style name="Theme.AppTheme1" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="background_color">#F9F9F9</item>
        <item name="text_color">#000000</item>
        <item name="second_text_color">#4F4F4F</item>
        <item name="header_color">@color/white</item>
        <item name="background_language_item">@color/white</item>
        <item name="stroke_setting_item">#DEECF3</item>
        <item name="bottom_navigation_select">#242525</item>
        <item name="bottom_navigation_unselect">#AEAEAF</item>
        <item name="android:editTextColor">@color/black</item>
        <item name="android:textColorHint">#80A6A3A3</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.AppTheme2" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="background_color">#000000</item>
        <item name="text_color">@color/white</item>
        <item name="second_text_color">#CFC0B9</item>
        <item name="header_color">#282A30</item>
        <item name="background_language_item">#282A30</item>
        <item name="stroke_setting_item">#DEECF3</item>
        <item name="bottom_navigation_select">#DCD6D6</item>
        <item name="bottom_navigation_unselect">#818283</item>
        <item name="android:editTextColor">@android:color/white</item>
        <item name="android:textColorHint">#99B6B5B5</item>
        <!-- Customize your theme here. -->
    </style>

</resources>
