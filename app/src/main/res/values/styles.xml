<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="recyclerview" parent="@style/Theme.Zippy">
        <item name="android:scrollbarThumbVertical">@drawable/scroll1</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:layoutAnimation">@anim/item_animation</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fadeScrollbars">false</item>
        <item name="android:layout_marginEnd">@dimen/_5sdp</item>
    </style>

    <style name="Theme.Zippy" parent="@style/Theme.MaterialComponents.Light.NoActionBar">
        <!--        <item name="android:statusBarColor">@color/main_bg</item>-->
        <!--        <item name="android:windowLightStatusBar">true</item>-->
        <!--        <item name="android:forceDarkAllowed">false</item>-->
        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme</item>
        <item name="colorControlHighlight">@color/storage_text_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorSecondary">@color/storage_bg_color</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox
        </item>
    </style>

    <style name="subtitle" parent="@style/Theme.Zippy">
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/myriadpro_semibold</item>
    </style>

    <style name="title" parent="@style/Theme.Zippy">
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/myriadpro_bold</item>
    </style>

    <style name="label" parent="@style/Theme.Zippy">
        <item name="android:textColor">@color/text</item>
        <item name="android:fontFamily">@font/myriadpro_regular</item>
    </style>

    <style name="titleCompress" parent="@style/Theme.Zippy">
        <item name="android:textColor">@color/compress_title_text_color</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginTop">@dimen/_8sdp</item>
        <item name="android:fontFamily">@font/myriadpro_bold</item>
    </style>

    <style name="edittextCompress" parent="@style/Theme.Zippy">
        <item name="android:background">@drawable/round_ediitext</item>
        <item name="android:padding">@dimen/_12sdp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/_2sdp</item>
        <item name="android:fontFamily">@font/myriadpro_bold</item>
    </style>

    <style name="MyCustomTabText" parent="@style/TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="fontFamily">@font/myriadpro_bold</item>
        <item name="textAllCaps">false</item>
    </style>


    <style name="toolbar" parent="@style/Theme.Zippy">
        <item name="android:textColor">@color/compress_title_text_color</item>
        <item name="android:fontFamily">@font/allerdisplay</item>
    </style>

    <style name="WhiteCursorSearchView" parent="@style/Widget.AppCompat.SearchView">
        <item name="colorControlNormal">@color/black</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="@style/BaseBottomSheetDialog"></style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/dialog_bg</item>
    </style>

    <style name="dialogTheme" parent="@style/Base.Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:layout_marginStart">@dimen/_20sdp</item>
        <item name="android:layout_marginEnd">@dimen/_20sdp</item>
    </style>

    <style name="DialogAnimation" parent="">
        <item name="android:windowEnterAnimation">@anim/anim_in</item>
        <item name="android:windowExitAnimation">@anim/anim_out</item>
    </style>

    <style name="noActionBar" parent="@style/Theme.Zippy">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
